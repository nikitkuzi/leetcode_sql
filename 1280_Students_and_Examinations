-- select st.student_id, st.student_name, sb.subject_name, COUNT(*) as attended_exams
-- from subjects as sb
-- left join examinations as ex on ex.subject_name =  sb.subject_name
-- right join students as st on st.student_id = ex.student_id
-- group by st.student_id, sb.subject_name
-- order by st.student_id, sb.subject_name

select s1.student_id,s1.student_name,s2.subject_name,count(s3.subject_name) as attended_exams
from Students s1
join subjects s2
left join Examinations s3
on s1.student_id=s3.student_id and s2.subject_name= s3.subject_name
group by s1.student_id, s2.subject_name
order by student_id,subject_name;